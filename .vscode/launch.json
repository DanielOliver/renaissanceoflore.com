{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "chrome",
        "request": "launch",
        "name": "Launch Chrome against localhost",
        "url": "http://localhost:8000",
        "webRoot": "${workspaceFolder}"
      },
      {
        "name": "Launch Firefox against localhost",
        "type": "firefox",
        "request": "launch",
        "reAttach": true,
        "url": "http://localhost:8000",
        "webRoot": "${workspaceFolder}"
      }
    ]
  }